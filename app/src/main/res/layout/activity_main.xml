<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/fragment_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="HELLO"

        android:textColor="@color/black"

        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/fragment_abtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_et"
        android:layout_marginLeft="20dp"

        android:text="Send" />

    <Button
        android:id="@+id/menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_et"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/fragment_abtn"
        android:text="Menu" />

    <Button
        android:id="@+id/dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_et"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/menu_btn"
        android:text="Dialog" />

    <Button
        android:id="@+id/dialog_custom_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_btn"
        android:layout_centerInParent="true"
        android:text="Custom Dialog" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_fg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/dialog_custom_btn"
        tools:layout="@layout/fragment_one" />

</RelativeLayout>